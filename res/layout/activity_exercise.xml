<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".ExerciseActivity" >

    <!-- android:background="@color/black" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10" >

        <!-- android:background="@color/red" -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/question_image"
                    android:src="@android:drawable/alert_dark_frame"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/question"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="gone" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imgButtonTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_image_tip"
            android:contentDescription="@string/tip"
            android:src="@drawable/tip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutInputAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:visibility="gone" >

        <EditText
            android:id="@+id/inputAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:ems="10" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/tableAnswerTextB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="@string/exercise_answers_buttons_weight"
        android:visibility="gone" >

        <!-- android:background="@color/blue" -->

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@android:color/transparent" >
            </RelativeLayout>

            <Button
                android:id="@+id/txtButtonAns0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="44"
                android:background="@drawable/button_main"
                android:text="@string/answer" />

            <RelativeLayout
                android:id="@+id/placeholder1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@android:color/transparent" >
            </RelativeLayout>

            <Button
                android:id="@+id/txtButtonAns1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="44"
                android:background="@drawable/button_main"
                android:text="@string/answer" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@android:color/transparent" >
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@android:color/transparent" >
            </RelativeLayout>

            <Button
                android:id="@+id/txtButtonAns2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="44"
                android:background="@drawable/button_main"
                android:text="@string/answer" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@android:color/transparent" >
            </RelativeLayout>

            <Button
                android:id="@+id/txtButtonAns3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="44"
                android:background="@drawable/button_main"
                android:text="@string/answer" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@android:color/transparent" >
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableAnswerImageB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="@string/exercise_answers_buttons_weight"
        android:visibility="gone" >

        <!-- android:background="@color/blue" -->

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageButton
                android:id="@+id/imgButtonAns0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_image_answer"
                android:contentDescription="@string/answer" />

            <ImageButton
                android:id="@+id/imgButtonAns1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_image_answer"
                android:contentDescription="@string/answer" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageButton
                android:id="@+id/imgButtonAns2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_image_answer"
                android:contentDescription="@string/answer" />

            <ImageButton
                android:id="@+id/imgButtonAns3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_image_answer"
                android:contentDescription="@string/answer" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false" >

        <!-- android:background="@color/green" -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_main"
                android:text="@string/back" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ads"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >
        </LinearLayout>
        <!-- android:background="@color/black" -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_main"
                android:text="@string/next" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>